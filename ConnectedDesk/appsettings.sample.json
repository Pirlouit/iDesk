{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "MsGraphSettings": {
    "TenantId": "<YOUR TENANTID>",
    "ClientId": "<YOUR CLIENTID>",
    "ClientSecret": "<YOUR CLIENTSECRET>",
    "RedirectUri": "<YOUR REDIRECTURI>",
    "User": "<YOUR EMAILADRESS>",
    
    "AuthorityFormat": "https://login.microsoftonline.com/{0}/v2.0",
    "Scope": "https://graph.microsoft.com/.default",
    "QueryCalendarView": "https://graph.microsoft.com/v1.0/users/{0}/calendarview",
    "QueryEvents": "https://graph.microsoft.com/v1.0/users/{0}/calendar/events/",
    "QueryMessages": "https://graph.microsoft.com/v1.0/users/{0}/messages"
  }
}